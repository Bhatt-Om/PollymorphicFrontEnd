<%= form_with model: @address do |f| %>

  <div>
    <%= f.label :address, "Address" %><br/>
    <%= f.text_area :address %>
  </div>

  <div>
    <%= f.label :city, "City" %><br/>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state, "State" %><br/>
    <%= f.text_field :state %>
  </div>

  <div>
    <%= f.label :zip_code, "Zip_Code" %><br/>
    <%= f.text_field :zip_code %>
  </div>

  <div>
    <%= f.label :country, "Country" %><br/>
    <%= f.text_field :country %><br/>
  </div>

   <div>
    <%= f.label :telephone, "Telephone" %><br/>
    <%= f.text_field :telephone %><br/>
  </div>

  <div>
    <%= f.select :address_type, options_for_select(pre_define_address), {include_blank: 'Select Address'} %><br/>
  </div>
  
  <div>
    <%= f.submit %>
  </div>
<% end %>
