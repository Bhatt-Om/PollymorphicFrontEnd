<h1>Addresses#index</h1>
<p>Find me in app/views/addresses/index.html.erb</p>

<div>
  <%= link_to "[ Log out ]",  destroy_user_session_path, data: {turbo_method: :delete , turbo_confirm: 'Are you sure?' } %>
</div>
<div> 
  <%= link_to "[ Create New Address ]", new_address_path %>
</div>
<% @addresses.each do |address| %>
<div>
<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip_Code</th>
      <th>Country</th>
      <th>Telephone</th>
      <th>Address_Type</th>
      <th colspan='3'>Action</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= address.address %></td>
      <td><%= address.city %></td>
      <td><%= address.state %></td>
      <td><%= address.zip_code %></td>
      <td><%= address.country %></td>
      <td><%= address.telephone %></td>
      <td><%= address.address_type %></td>
      <td><%= link_to 'Edit', edit_address_path(address) %></td>
      <td><%= link_to 'Show', address_path(address) %></td>
      <td><%= link_to 'delete', address_path(address), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
</table>
</div>
<% end %>
